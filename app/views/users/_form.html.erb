<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><%= pluralize(user.errors.count, "erro") %> impediram que este usu√°rio fosse salvo:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :nome, class: "form-label" %>
    <%= form.text_field :nome, class: "form-control", style: "max-width: 300px;" %>
  </div>

  <div class="mb-3">
    <%= form.label :sobrenome, class: "form-label" %>
    <%= form.text_field :sobrenome, class: "form-control", style: "max-width: 300px;" %>
  </div>

  <div class="mb-3">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
